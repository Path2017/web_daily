@charset "utf-8";

/* 找设计 by gavin */
:root {
  --orange: #f79831;
  --font-gray: #424242;
  --border-gray: #979797;
}
/* 按钮 */
.btn-publish {
  padding: 12px 20px;
  background: var(--orange);
  border-radius: 5px;
  color: #fff;
  font-size: 16px;
  position: absolute;
  bottom: 105px;
  left: 50%;
  margin-left: -84px;
}
.banner-wp {
  position: relative;
}
h2.find-title {
  font-size: 24px;
  font-weight: 800;
  padding: 20px;
  text-align: center;
  position: relative;
  &::before,
  &::after {
    content: ' ';
    display: inline-block;
    border-top: 2px solid var(--border-gray);
    position: absolute;
    left: 50%;
    margin-left: -230px;
    top: 49.9%;
    width: 100px;
  }
  &::after {
    margin-left: 130px;
  }
}
.service-wp {
  display: inline-block;
  width: 100%;
  background: #fbfbfb;
  padding-bottom: 70px;
  li {
    float: left;
    width: 20%;
    color: var(--font-gray);
    font-size: 16px;
    font-weight: 600;
    img {
      width: 85px;
      margin-right: 15px;
    }
  }
}
.ours-wp {
  &>ul {
    height: 500px;
  }
  &>ul>li {
    height: 311px;
    width: 48%;
    padding-left: 1%;
    float: left;
    margin-right: 2%;
    background: #fbfbfb;
    padding-bottom: 20px;
    &.nothing {
      margin-right: 0;
      background: url('../img/ours_06.png')
    }
    img {
      float: left;
      width: 395px;
      height: 246px;
    }
  }
  h3 {
    color: var(--font-gray);
    font-size: 18px;
    padding-left: 12px;
    border-left: 2px solid var(--orange);
    small {
      padding-left: 20px;
      color: var(--border-gray);
    }
  }
  .step {
    float: left;
    margin-left: 40px;
    width: 200px;
    h4 {
      font-size: 16px;
      color: var(--font-gray);
    }
    ul {
      margin-left: 30px;
    }
    li {
      width: 100%;
      margin-bottom: 10px;
      color: var(--font-gray);
      font-weight: 600;
      cursor: pointer;
      font-size: 16px;
      padding-bottom: 0;
      span {
        position: relative;
        display: inline-block;
        width: 25px;
        height: 25px;
        text-align: center;
        line-height: 25px;
        border: 1px solid var(--border-gray);
        border-radius: 50%;
        margin-right: 15px;
        background: #fff;
        font-weight: 400;
        font-size: 14px;
        &::after {
          content: ' ';
          display: inline-block;
          border-left: 1px solid var(--border-gray);
          position: absolute;
          left: 50%;
          height: 10px;
          width: 0px;
          bottom: -10px;
        }
        &.nothing::after {
          content: none;
        }
        &.active {
          color: var(--orange);
          border-color: var(--orange);
        }
      }
    }
  }
  .btn-publish {
    position: relative;
  }
}
.company-wp {
  padding-top: 20px;
  padding-bottom: 80px;
  margin-top: -30px;
  background: #fbfbfb;
  h2.find-title {
    &::before,
    &::after {
      margin-left: -300px;
    }
    &::after {
      margin-left: 200px;
    }
  }
}
