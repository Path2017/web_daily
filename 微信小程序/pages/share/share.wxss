/* pages/share/share.wxss */
.canvasbox {
  width: 100%;
  position: fixed;
  height: 100%;
  background-color: #f6f6f6;
}
.mycanvas {
  width: 700rpx;
  height: 62%;
  padding-bottom: 40%;
  overflow: scroll;
  background-color: #fff;
  min-height: 100rpx;
  border-radius: 15rpx;
  margin: 3% auto;
}

.savebtn {
  position: fixed;
  bottom: 30rpx;
  width: 80%;
  height: 88rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 88rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  left: 10%;
  z-index: 999999;
}
